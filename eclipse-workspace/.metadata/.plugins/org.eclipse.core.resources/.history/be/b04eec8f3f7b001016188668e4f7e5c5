package com.gqt.javabasics.Dsaprogram;

public class day53to55 {

	static int countsmasmallequalelement(int[] a,int key) {
		int l=0; int h=a.length-1;
		int mid=0;
		while(l<=h) {
			mid=(l+h)/2;
			if(key==a[mid]) {
				while((mid+1<a.length) && a[mid+1]==key  ) {
					mid++;
				}
				break;
			}
			else if(key<a[mid]) {
				h=mid-1;
			}
			else {
				l=mid+1;
			}
		}
		if(a[mid]>key) {
			return mid;
		}
		else {
			return mid+1;
		}
	}
	static int[] findfirstlastpositionofgivenelement(int[] a,int key) {
		int[] res= {-1,-1};
		int l=0;
		int h=a.length-1;
		int mid=0;
		while(l<=h) {
			mid=(l+h)/2;
			if(key==a[mid]) {
				res[0]=mid;
				h=mid-1;
			}
			else if(a[mid]<key) {
				l=mid+1;
			}
			else {
				h=mid-1;
			}
		}
		l=0;
		 h=a.length-1;
		mid=0;
		while(l<=h) {
			mid=(l+h)/2;
			if(key==a[mid]) {
				res[1]=mid;
				l=mid+1;
			}
			else if(a[mid]<key) {
				l=mid+1;
			}
			else {
				h=mid-1;
			}
		}
		return res;
	}
	public static void main(String[] args) {
		int key=26;
		int[] a= {26,12,24,26,28,30};
		System.out.println(countsmasmallequalelement(a,key));
		System.out.println(findfirstlastpositionofgivenelement(a,key));
		}
	}


